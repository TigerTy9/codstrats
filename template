  <script>
    const els = {
      search: document.getElementById('search'),
      mode: document.getElementById('mode'),
      map: document.getElementById('map'),
      preset: document.getElementById('preset'),
      cards: document.getElementById('cards'),
      printBtn: document.getElementById('printBtn'),
      shareBtn: document.getElementById('shareBtn')
    };

    // filter logic
    function applyFilters(pushHash=true){
      const q = els.search.value.trim().toLowerCase();
      const mode = els.mode.value;
      const map = els.map.value;
      const cards = [...els.cards.children];
      cards.forEach(card=>{
        const text = card.innerText.toLowerCase();
        const cMode = card.getAttribute('data-mode');
        const cMap  = card.getAttribute('data-map');
        const shown = (mode==='all'||mode===cMode) && (map==='all'||map===cMap) && (!q || text.includes(q));
        card.style.display = shown? 'block':'none';
      });
      if(pushHash){
        const params = new URLSearchParams({q,mode,map,preset:els.preset.value});
        location.hash = params.toString();
      }
      // apply preset note highlight (visual only)
      document.querySelectorAll('.kpi .pill strong').forEach(x=>{
        const p = els.preset.value;
        x.style.color = p==='aggro'? 'var(--warn)' : p==='lockdown'? 'var(--accent-2)' : 'var(--text)';
      });
    }

    ['input','change'].forEach(ev=>{
      els.search.addEventListener(ev, ()=>applyFilters());
      els.mode.addEventListener(ev, ()=>applyFilters());
      els.map.addEventListener(ev, ()=>applyFilters());
      els.preset.addEventListener(ev, ()=>applyFilters());
    });

    // Print & Share
    els.printBtn.addEventListener('click', ()=>window.print());
    els.shareBtn.addEventListener('click', ()=>{
      navigator.clipboard.writeText(location.href).then(()=>{
        els.shareBtn.textContent='‚úÖ Copied link';
        setTimeout(()=>els.shareBtn.textContent='üîó Share', 1200);
      });
    });

    // Hydrate from hash
    (function init(){
      const hash = location.hash.replace(/^#/, '');
      const params = new URLSearchParams(hash);
      if(params.size){
        els.search.value = params.get('q')||'';
        els.mode.value   = params.get('mode')||'all';
        els.map.value    = params.get('map')||'all';
        els.preset.value = params.get('preset')||'default';
      }
      applyFilters(false);
    })();
  </script>
</body>
